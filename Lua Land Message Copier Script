-- Created By Me (Lua Land)
-- Fe Bypass Script that copies everyone message like an ai

-- Services
local Players = game:GetService("Players")
local TextChatService = game:GetService("TextChatService")
local StarterGui = game:GetService("StarterGui")

StarterGui:SetCore("SendNotification", {
    Title = "Lua Land",
    Text = "Bad words will be blocked automatically! So you are safe in this Script!",
    Duration = 5
})

local badWords = {
    "Fuck",
    "Suck",
    "Dick",
    "Nigger",
    "Nigga",
    "Stupid",
    "Idiot",
    "Gay",
    "Hate",
    "Girl",
    "Boy",
    "Noob",
    "Racist",
    "Dumb",
    "Shit",
}

local cooldown = false

local function containsBadWord(message)
    message = string.lower(message)
    for _, word in ipairs(badWords) do
        if string.find(message, word) then
            return true
        end
    end
    return false
end

local function SendChatMessage(message)
    if TextChatService.ChatVersion == Enum.ChatVersion.TextChatService then
        local textChannel = TextChatService.TextChannels.RBXGeneral
        textChannel:SendAsync(message)
    else
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(message, "All")
    end
end

TextChatService.TextChannels.RBXGeneral.OnIncomingMessage = function(message)
    if cooldown then return end
    local text = message.Text
    local sender = message.TextSource and message.TextSource.UserId

    if sender == Players.LocalPlayer.UserId then
        return
    end

    if not containsBadWord(text) then
        cooldown = true
        SendChatMessage(text)
        task.delay(1, function()
            cooldown = false
        end)
    end
end
